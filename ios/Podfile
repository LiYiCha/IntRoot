# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  # âš ï¸ iOSç‰ˆæœ¬ä¸ä½¿ç”¨å‹ç›Ÿç»Ÿè®¡SDKï¼ˆç¬¦åˆApp Storeå®¡æ ¸è¦æ±‚ï¼‰
  # Androidç‰ˆæœ¬ä¿ç•™å‹ç›Ÿç»Ÿè®¡åŠŸèƒ½
  # å¦‚éœ€ä½¿ç”¨ç»Ÿè®¡åŠŸèƒ½ï¼Œå»ºè®®ä½¿ç”¨Appleè‡ªå¸¦çš„App Analytics
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # ğŸ”¥ å…³é”®ï¼šé…ç½® permission_handler æ’ä»¶æ‰€éœ€çš„æƒé™
    # å¦‚æœä¸é…ç½®ï¼ŒiOSå°†æ— æ³•è¯·æ±‚è¿™äº›æƒé™ï¼
    target.build_configurations.each do |config|
      # ğŸš€ ä¿®å¤iOSéƒ¨ç½²ç›®æ ‡ç‰ˆæœ¬é—®é¢˜
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      
      # ğŸ”§ ä¿®å¤æ¨¡æ‹Ÿå™¨æ¶æ„é—®é¢˜ï¼šæ’é™¤ arm64 æ¶æ„ï¼ˆè§£å†³å‹ç›ŸSDKç­‰ç¬¬ä¸‰æ–¹åº“ä¸æ”¯æŒæ¨¡æ‹Ÿå™¨çš„é—®é¢˜ï¼‰
      # âš ï¸ æ³¨é‡Šæ‰ï¼šå·²ç§»é™¤å‹ç›ŸSDKï¼Œä¸å†éœ€è¦æ’é™¤arm64æ¶æ„
      # config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        
        ## dart: PermissionGroup.microphone
        'PERMISSION_MICROPHONE=1',
        
        ## dart: PermissionGroup.speech
        'PERMISSION_SPEECH_RECOGNIZER=1',
        
        ## dart: PermissionGroup.notification
        'PERMISSION_NOTIFICATIONS=1',
        
        ## dart: PermissionGroup.camera
        'PERMISSION_CAMERA=1',
        
      ## dart: PermissionGroup.photos
      'PERMISSION_PHOTOS=1',
      
      ]
    end
  end
end
